{
    "name": "fpp",
    "displayName": "FPP",
    "description": "FPrime-Prime Language Support",
    "author": {
        "name": "Andrei Tumbar",
        "email": "andrei.tumbar@jpl.nasa.gov"
    },
    "publisher": "jet-propulsion-laboratory",
    "repository": {
        "url": "https://github.com/fprime-community/vscode-fpp",
        "type": "git"
    },
    "version": "1.0.32",
    "icon": "fprime-logo.png",
    "engines": {
        "vscode": "^1.81.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "fpp.reload",
                "title": "FPP: Reload Project"
            },
            {
                "command": "fpp.restartLsp",
                "title": "FPP: Restart Language Server"
            },
            {
                "command": "fpp.dumpActiveTextEditorSyntaxTree",
                "title": "FPP (debug command): View CST"
            },
            {
                "command": "fpp.select",
                "title": "FPP: Select Locs file inside workspace"
            },
            {
                "command": "fpp.close",
                "title": "FPP: Close Project"
            },
            {
                "command": "fpp.open",
                "title": "FPP: Open Project"
            },
            {
                "command": "fpp.load",
                "title": "FPP: Load Locs File as Project"
            },
            {
                "command": "fpp.diagram.open",
                "title": "FPP: Open Diagram",
                "icon": "$(telescope)",
                "category": "FPP Diagram"
            },
            {
                "command": "fpp.diagram.fit",
                "title": "FPP: Fit Diagram",
                "icon": "$(arrow-both)",
                "category": "FPP Diagram"
            },
            {
                "command": "fpp.diagram.center",
                "title": "FPP: Center Diagram",
                "icon": "$(layout-centered)",
                "category": "FPP Diagram"
            },
            {
                "command": "fpp.diagram.export",
                "title": "FPP: Export Diagram",
                "icon": "$(desktop-download)",
                "category": "FPP Diagram"
            }
        ],
        "languages": [
            {
                "id": "fpp",
                "aliases": [
                    "fpp",
                    "FPrimePrime"
                ],
                "extensions": [
                    ".fpp",
                    ".fppi"
                ],
                "configuration": "./syntax/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "fpp",
                "scopeName": "source.fpp",
                "path": "./syntax/fpp.tmLanguage.json"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "fpp.diagram.open",
                    "when": "editorLangId == 'fpp'"
                }
            ],
            "editor/context": [
                {
                    "command": "fpp.diagram.open",
                    "when": "editorLangId == 'fpp'",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "command": "fpp.diagram.open",
                    "when": "editorLangId == 'fpp'",
                    "group": "navigation"
                },
                {
                    "command": "fpp.diagram.fit",
                    "when": "fppDiagrams-focused == true",
                    "group": "navigation"
                },
                {
                    "command": "fpp.diagram.center",
                    "when": "fppDiagrams-focused == true",
                    "group": "navigation"
                },
                {
                    "command": "fpp.diagram.export",
                    "when": "fppDiagrams-focused == true",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "fpp.diagram.open",
                    "when": "resourceExtname == '.fpp'",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "FPP",
            "type": "object",
            "properties": {
                "fpp.serverPath": {
                    "type": "string",
                    "markdownDescription": "Path to the FPP LSP server, use `<default>` for bundled binary"
                },
                "fpp.locsSearch": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "markdownDescription": "Glob patterns in order of priority to search for an `locs.fpp` on project startup if no other locs is selected",
                    "default": [
                        "**/build-fprime-automatic-native/locs.fpp",
                        "**/build-fprime-*/locs.fpp"
                    ]
                },
                "fpp.locsExclude": {
                    "type": "string",
                    "markdownDescription": "Glob pattern path to exclude from `locs.fpp` search"
                },
                "fpp.enableCodeLens": {
                    "type": "boolean",
                    "default": true
                }
            }
        },
        "semanticTokenTypes": [
            {
                "id": "module",
                "superType": "namespace"
            },
            {
                "id": "topology",
                "superType": "variable"
            },
            {
                "id": "component",
                "superType": "class"
            },
            {
                "id": "interface",
                "superType": "interface"
            },
            {
                "id": "componentInstance",
                "superType": "variable"
            },
            {
                "id": "constant",
                "superType": "variable"
            },
            {
                "id": "enumConstant",
                "superType": "enumMember"
            },
            {
                "id": "structMember",
                "superType": "variable"
            },
            {
                "id": "graphGroup",
                "superType": "namespace"
            },
            {
                "id": "portInstance",
                "superType": "function"
            },
            {
                "id": "port",
                "superType": "class"
            },
            {
                "id": "abstractType",
                "superType": "type"
            },
            {
                "id": "aliasType",
                "superType": "type"
            },
            {
                "id": "arrayType",
                "superType": "type"
            },
            {
                "id": "enumType",
                "superType": "type"
            },
            {
                "id": "structType",
                "superType": "type"
            },
            {
                "id": "primitiveType",
                "superType": "keyword"
            },
            {
                "id": "formalParameter",
                "superType": "parameter"
            },
            {
                "id": "command",
                "superType": "function"
            },
            {
                "id": "event",
                "superType": "function"
            },
            {
                "id": "telemetry",
                "superType": "function"
            },
            {
                "id": "parameter",
                "superType": "function"
            },
            {
                "id": "dataProduct",
                "superType": "function"
            },
            {
                "id": "stateMachine",
                "superType": "class"
            },
            {
                "id": "stateMachineInstance",
                "superType": "variable"
            },
            {
                "id": "telemetryPacketSet",
                "superType": "class"
            },
            {
                "id": "telemetryPacket",
                "superType": "class"
            },
            {
                "id": "action",
                "superType": "function"
            },
            {
                "id": "guard",
                "superType": "variable"
            },
            {
                "id": "signal",
                "superType": "event"
            },
            {
                "id": "state",
                "superType": "varialbe"
            },
            {
                "id": "annotation",
                "superType": "comment"
            },
            {
                "id": "comment",
                "superType": "comment"
            },
            {
                "id": "number",
                "superType": "number"
            },
            {
                "id": "string",
                "superType": "string"
            },
            {
                "id": "keyword",
                "superType": "keyword"
            }
        ],
        "semanticTokenScopes": [
            {
                "language": "fpp",
                "scopes": {
                    "module": [
                        "entity.name.namespace"
                    ],
                    "topology": [
                        "entity.name.variable"
                    ],
                    "component": [
                        "entity.name.type.class"
                    ],
                    "interface": [
                        "entity.name.type.class"
                    ],
                    "componentInstance": [
                        "entity.name.variable"
                    ],
                    "constant": [
                        "entity.name.variable"
                    ],
                    "enumConstant": [
                        "variable.other.enummember"
                    ],
                    "structMember": [
                        "entity.name.variable"
                    ],
                    "graphGroup": [
                        "entity.name.type.class"
                    ],
                    "portInstance": [
                        "entity.name.function"
                    ],
                    "port": [
                        "entity.name.type.class"
                    ],
                    "abstractType": [
                        "entity.name.type.class"
                    ],
                    "aliasType": [
                        "entity.name.type"
                    ],
                    "arrayType": [
                        "entity.name.type.class"
                    ],
                    "enumType": [
                        "entity.name.type.class"
                    ],
                    "structType": [
                        "entity.name.type.class"
                    ],
                    "primitiveType": [
                        "entity.name.type"
                    ],
                    "formalParameter": [
                        "entity.name.variable"
                    ],
                    "command": [
                        "entity.name.function"
                    ],
                    "event": [
                        "entity.name.function"
                    ],
                    "telemetry": [
                        "entity.name.function"
                    ],
                    "parameter": [
                        "entity.name.function"
                    ],
                    "dataProduct": [
                        "entity.name.function"
                    ],
                    "stateMachine": [
                        "entity.name.type.class"
                    ],
                    "stateMachineInstance": [
                        "entity.name.variable"
                    ],
                    "telemetryPacketSet": [
                        "entity.name.type.class"
                    ],
                    "telemetryPacket": [
                        "entity.name.type.class"
                    ],
                    "action": [
                        "entity.name.function"
                    ],
                    "guard": [
                        "entity.name.variable"
                    ],
                    "signal": [
                        "variable.other.event"
                    ],
                    "state": [
                        "entity.name.variable"
                    ],
                    "annotation": [
                        "comment.block.documentation"
                    ],
                    "comment": [
                        "comment.line"
                    ],
                    "number": [
                        "constant.numeric"
                    ],
                    "string": [
                        "string.quoted.double"
                    ],
                    "keyword": [
                        "keyword.other"
                    ]
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "rm -rf dist && yarn package",
        "package": "webpack --mode production",
        "build": "webpack --mode development",
        "watch": "webpack --mode development --watch"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^22",
        "@types/vscode": "^1.81.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.4.5",
        "umd-compat-loader": "^2.1.2",
        "webpack": "^5.100.2",
        "webpack-cli": "^6.0.1"
    }
}